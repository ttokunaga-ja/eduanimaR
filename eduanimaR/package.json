{
  "name": "codingagent-fsd-template",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "api:generate": "orval --config ./orval.config.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "i18n:extract": "i18next-scanner -c i18next-scanner.config.js 'src/**/*.{js,jsx,ts,tsx,md}'",
    "i18n:check": "node ./scripts/i18n-check.js"
  },
  "dependencies": {
    "i18next": "^25.8.10",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^16.5.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-boundaries": "^5.4.0",
    "eslint-plugin-i18n-json": "^4.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.32.0",
    "glob": "^10.3.0",
    "i18next-scanner": "^4.0.1",
    "orval": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^3.0.0"
  }
}
