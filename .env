# ============================================================
# eduanimaR Phase 1 環境変数テンプレート
# 使い方: cp .env.example .env  →  GEMINI_API_KEY を設定
# ============================================================

# ─────────────────────────────────────────
# 必須: Gemini API Key（全サービス共通）
# https://aistudio.google.com/apikey から取得
# ─────────────────────────────────────────
GEMINI_API_KEY=AIzaSyDrvDNZgNmwXjHFiuJHyScYN3oogFR4hHc

# ─────────────────────────────────────────
# PostgreSQL
# ─────────────────────────────────────────
POSTGRES_USER=eduanima
POSTGRES_PASSWORD=eduanima_password
POSTGRES_DB=eduanima_professor
# ローカル接続URL（Professor用）
DATABASE_URL=postgres://eduanima:eduanima_password@localhost:5432/eduanima_professor?sslmode=disable

# ─────────────────────────────────────────
# MinIO（Phase 1: GCS代替 S3互換ストレージ）
# Phase 2でGCS本番に切り替え時は professor の OBJECT_STORAGE_BACKEND=gcs に変更
# Console UI: http://localhost:9001
# ─────────────────────────────────────────
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=eduanima-materials
# Professor用 MinIO 設定
MINIO_ENDPOINT=localhost:9000
MINIO_USE_SSL=false
OBJECT_STORAGE_BACKEND=minio

# ─────────────────────────────────────────
# Kafka
# ─────────────────────────────────────────
KAFKA_BROKERS=localhost:9094
KAFKA_TOPIC_INGEST=eduanima.ingest.jobs

# ─────────────────────────────────────────
# Professor（Go バックエンド）
# ─────────────────────────────────────────
PORT=8080
LIBRARIAN_GRPC_ADDR=localhost:50051
PROFESSOR_MODEL_FAST=gemini-2.0-flash
PROFESSOR_MODEL_ACCURATE=gemini-2.5-pro

# ─────────────────────────────────────────
# Librarian（Python 推論サービス）
# ─────────────────────────────────────────
GRPC_PORT=50051
LIBRARIAN_MODEL_FAST=gemini-2.0-flash

# ─────────────────────────────────────────
# 共通
# ─────────────────────────────────────────
LOG_LEVEL=info
# LOG_LEVEL=debug  # デバッグ時はこちらに変更
